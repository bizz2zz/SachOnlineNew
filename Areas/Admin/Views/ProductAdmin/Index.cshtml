@model List<LuongVinhKhang.SachOnline.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // đổi đúng layout admin nhen
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">📚 Danh sách Sản phẩm</h2>
    <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm Sản phẩm
    </a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr class="text-center">
                <th scope="col">Tên sách</th>
                <th scope="col">Giá bán</th>
                <th scope="col">Chủ đề</th>
                <th scope="col">Nhà xuất bản</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Không có sản phẩm nào.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("N0") VNĐ</td>
                        <td>@item.ChuDe?.Name  </td>
                        <td>@item.NhaXuatBan?.Name </td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning me-1">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
