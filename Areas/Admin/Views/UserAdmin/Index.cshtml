@model List<LuongVinhKhang.SachOnline.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách Người dùng</h2>
<a asp-area="Admin" asp-controller="UserAdmin" asp-action="Create" class="btn btn-primary mb-3">Thêm Người dùng Mới</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã KH</th>
            <th>Họ tên</th>
            <th>Tài khoản</th>
            <th>Email</th>
            <th>Quyền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaKH</td>
                <td>@item.HoTen</td>
                <td>@item.TaiKhoan</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>
                    <a asp-area="Admin" asp-controller="UserAdmin" asp-action="Edit" asp-route-maKH="@item.MaKH" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="UserAdmin" asp-action="Delete" asp-route-maKH="@item.MaKH" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>