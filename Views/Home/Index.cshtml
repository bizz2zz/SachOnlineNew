@model LuongVinhKhang.SachOnline.Models.PagedList<LuongVinhKhang.SachOnline.Models.Product>
@{
    ViewData["Title"] = "Trang Chu";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="d-flex justify-content-center mt-4">
        <div class="alert alert-success text-center w-50 shadow rounded-pill fw-bold">
            @TempData["SuccessMessage"]
        </div>
    </div>
}

<h2 class="text-center">SÁCH MỚI</h2>
<hr>
<div class="row text-center">
    @if (!Model.Any())
    {
        <div class="alert alert-warning">Không có sản phẩm nào.</div>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                <div class="product-card">
                    <a href="@Url.Action("BookDetails", "Home", new { id = product.Id })">
                        <div class="image-wrapper">
                            <img src="@Url.Content(product.Image != null ? "~/Images/" + product.Image : "~/Images/default.jpg")"
                                 alt="@product.Name" />
                        </div>

                    </a>
                    <div class="caption text-center">
                        <h3>@product.Name</h3>
                        <p class=" text-dark" style="text-decoration: line-through;">
                            Giá: @product.PriceDefault.ToString("N0") VNĐ
                        </p>
                        <p class="price text-danger fw-bold">
                            Giá khuyến mãi: @product.Price.ToString("N0") VNĐ
                        </p>

                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                            <a href="@Url.Action("BookDetails", "Home", new { id = product.Id })" class="btn btn-info btn-sm" role="button">Xem chi tiết</a>
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <span class="fas fa-shopping-cart"></span> Thêm vào giỏ
                            </button>
                        </form>
                    </div>
                </div>
            </div>

        }
    }
</div>

<!-- Phân trang -->
<nav class="text-center">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex - 1 })" aria-label="Previous">
                <span aria-hidden="true">«</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageIndex + 1 })" aria-label="Next">
                <span aria-hidden="true">»</span>
            </a>
        </li>
    </ul>
</nav>

@section SachBanNhieu {
    @await Html.PartialAsync("SachBanNhieuPartial")
}