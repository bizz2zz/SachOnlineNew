@model List<LuongVinhKhang.SachOnline.Models.Cart>

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="d-flex justify-content-center my-3">
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    </div>
}


<div class="container mt-5">
    <h2 class="text-center mb-4">🛒 Giỏ hàng của bạn</h2>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng của bạn đang trống.
        </div>
    }
    else
    {
        <form asp-action="UpdateCart" method="post" id="cartForm">
            <div class="table-responsive">
                <table class="table table-bordered align-middle shadow-sm">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            <tr>
                                <td class="d-flex align-items-center gap-3">
                                    <img src="@Url.Content("~/Images/" + (item.Product?.Image ?? "default.jpg"))"
                                         alt="@item.Product?.Name"
                                         class="img-thumbnail rounded" style="width: 70px;" />
                                    <span class="fw-semibold">@item.Product?.Name</span>
                                </td>
                                <td class="text-center text-danger fw-semibold">
                                    @(item.Product?.Price.ToString("N0") ?? "0") VNĐ
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center align-items-center gap-2">
                                        <input type="hidden" name="cartItems[@i].ProductId" value="@item.ProductId" />
                                        <input type="hidden" name="cartItems[@i].CartId" value="@item.CartId" />
                                        <input type="number" name="cartItems[@i].Quantity" value="@item.Quantity" min="1"
                                               class="form-control form-control-sm text-center" style="width: 60px;" />
                                    </div>
                                </td>
                                <td class="text-center fw-bold text-success">
                                    @((item.Product?.Price * item.Quantity)?.ToString("N0") ?? "0") VNĐ
                                </td>
                                <td class="text-center">
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    onclick="removeFromCart(@item.CartId, @item.ProductId)">
                                Xóa
                            </button>


                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                            <td class="text-success fw-bold text-center fs-5">
                                @Model.Where(item => item.Product != null).Sum(item => item.Product.Price * item.Quantity).ToString("N0") VNĐ
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="row" style="margin-top: 30px;">
                <div class="col-xs-6 text-left">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default">
                        Tiếp tục mua sắm
                    </a>
                </div>

                <div class="col-xs-6 text-right">
                    <button type="submit" class="btn btn-primary">
                        Cập nhật giỏ hàng 🛠
                    </button>
                    <a href="@Url.Action("Checkout", "Checkout")" class="btn btn-success">
                        Thanh toán 
                    </a>
                </div>
            </div>

        </form>
    }
</div>
<script>
    function removeFromCart(cartId, productId) {
        if (confirm("Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng không?")) {
            const form = document.createElement("form");
            form.method = "post";
            form.action = "/Cart/RemoveFromCart";

            const input1 = document.createElement("input");
            input1.type = "hidden";
            input1.name = "cartId";
            input1.value = cartId;

            const input2 = document.createElement("input");
            input2.type = "hidden";
            input2.name = "productId";
            input2.value = productId;

            form.appendChild(input1);
            form.appendChild(input2);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>


